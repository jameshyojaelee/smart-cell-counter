{
  "expo": {
    "name": "Smart Cell Counter",
    "slug": "smart-cell-counter",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartcellcounter.app",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "We use your device identifier to show personalized ads if you opt in."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.smartcellcounter.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to capture hemocytometer images."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photo library to import images.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save processed images to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "scheme": "smart-cell-counter"
  }
}
